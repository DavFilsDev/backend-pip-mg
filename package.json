{
  "name": "backend-pip-mg",
  "version": "1.0.0",
  "description": "Backend API pour la Plateforme d'Insertion Professionnelle Madagascar - Open Source, gratuit, Node.js/Express/TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "db:seed": "ts-node prisma/seed.ts"
  },
  "keywords": ["madagascar", "emploi", "entretien", "cv", "open-source", "nodejs", "express"],
